---
layout: default.njk
title: Blog Home
---
<article class="h-entry">
<h1 class="text-2xl md:text-3xl lg:text-4xl font-bold p-name">{{title}}</h1>
<div class="mb-5 italic text-gray-500">
  <time class="dt-published">{{ page.date | asPostDate }}</time>
</div>

<div class="prose prose-a:no-underline hover:prose-a:underline max-w-none e-content">
  {{ content | safe }}
</div>
</article>

{% if tags %}
<section class="mt-4">
  {% for tag in tags | removeMetaTags %}  
      <a rel="tag" class="inline-block rounded-full px-3 py-1 text-xs md:text-sm font-semibold text-gray-700 mx-1 my-1 border-accent-5 border hover:bg-accent-3 hover:text-white hover:border-accent-3" href="/blog/tags#{{ tag }}">#{{ tag}}</a>
  {% endfor %}
</section>
{% endif %}

<hr class="my-4 w-2/3 mx-auto sm:w-full sm:my-6">

{% set posts = collections.allBlogPosts %}
{% set nextPost = posts | getNextCollectionItem(page) %}
{% set previousPost = posts | getPreviousCollectionItem(page) %}
{% if nextPost or previousPost %}
  <ul>
    {% if nextPost %}
      <li>Next: <a rel="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </li>
    {% endif %}
    {% if previousPost %}
      <li>Previous: <a rel="prev" href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
      </li>
    {% endif %}
  </ul>
{% endif %}
